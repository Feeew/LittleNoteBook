{% extends "CoreBundle::base.html.twig" %}

{% block title %}
    {{ "menu.link"|trans }}
{% endblock %}

{% block body %}

    <a href='{{ path('core_links_add') }}'>{{ 'link.label_add'|trans }}</a>
    
    <br/><br/>
    {% if listLink|length > 0 %}
    	<table><tr>
        {% for link in listLink %}
            {% if loop.index % 2 == 1 and loop.index != 1 %}
        		</tr><tr>
        	{% endif %}
        	<td>
                <table class='link'>
                    <tr><th>{{ 'label.classic.number'|trans }}</th><td>{{ link.id }}</td></tr>
                    <tr><th>{{ 'label.link.name'|trans }}</th><td>{{ link.name }}</td></tr>
                    <tr><th>{{ 'label.link.url'|trans }}</th><td>{{ link.url }}</td></tr>
                    <tr><th>{{ 'label.link.category'|trans }}</th><td>{{ link.category.name }}</td></tr>
                    <tr>
                    	<th>{{ 'label.classic.action'|trans }}</th>
                    	<td>
                    		<a href='{{ path('core_links_update', {'id':link.id}) }}'>{{ 'form.submit.update'|trans }}</a>
                    		/
                    	    <a href='{{ path('core_links_delete', {'id':link.id}) }}' onclick='return confirmDelete("{{ 'form.alert.confirmDelete'|trans }}");'>{{ 'form.submit.delete'|trans }}</a>
                    	    /
                    		<a href='#' onclick='displayUserList(event, "{{ path('user_getlistajax', {'type':'link', 'id':link.id }) }}");'>{{ 'form.submit.share'|trans }}</a>
                    	</td>	
                    </tr>
                </table>
             </td>
        {% endfor %}
        </tr></table>
    {% else %}
        <h3>{{ 'link.index_empty'|trans }}</h3>
    {% endif %}

	<br /><br />
	
    <a href='{{ path('core_links_add') }}'>{{ 'link.label_add'|trans }}</a>
{% endblock %}